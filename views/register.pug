doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  title Furniture Company - User Registration
  link(rel='stylesheet' href='/css/register.css')
.container
  // Left side: Image
  .image-section
    img(src='/images/background.jpeg' alt='Furniture Company')
  // Right side: Form
  .form-section
    h2 User Registration
    form#registerForm(action='/submit' method='POST')
      label(for='name') Full Name
      input#name(type='text' name='Name' placeholder='Enter full name' required='')
      label(for='email') Email
      input#email(type='email' name='Email' placeholder='Enter email' required='')
      label(for='password') Password
      .password-wrapper
        input#password(type='password' name='Password' placeholder='Enter password' required='')
        span.toggle-password(onclick='togglePassword()') &#x1F441;
      label(for='role') Role
      select#role(required='')
        option(value='') -- Select Role --
        option(value='Admin') Admin
        option(value='Manager') Manager
        option(value='Attendant') Attendant
      button(type='submit') Register
      p#error-message
script(src='resgister.js')
