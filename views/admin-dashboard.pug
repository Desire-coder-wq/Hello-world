doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1')
  title Furniture Company - User Registration &amp; Settings
  link(rel='stylesheet' href='/css/admin-dashboard.css')
  nav.navbar.navbar-expand-lg.bg-body-tertiary
      .container-fluid
        a.navbar-brand(href='#') FORMS
        button.navbar-toggler(type='button' data-bs-toggle='collapse' data-bs-target='#navbarNav' aria-controls='navbarNav' aria-expanded='false' aria-label='Toggle navigation')
          span.navbar-toggler-icon
        #navbarNav.collapse.navbar-collapse
          ul.navbar-nav.ms-auto
            li.nav-item
              a.nav-link(href='/index') Home
            li.nav-item
              a.nav-link(href='/register') register
            li.nav-item
              a.nav-link(href='/login') login
            li.nav-item
              a.nav-link(href='/stock') stock
main
  .container
    .image-section
      img(src='/images/sofa.jpeg' alt='Furniture Company')
    // Right side: User Registration Form
    .form-section
      h2 User Registration
      form#registerForm(action='/admin-dashboard' method='POST')
        label(for='name') Full Name
        input#name(type='text' name='name' placeholder='Enter full name' required='')
        label(for='email') Email
        input#email(type='email' name='email' placeholder='Enter email' required='')
        label(for='password') Password
        .password-wrapper
          input#password(type='password' name='password' placeholder='Enter password' required='')
          span.toggle-password(onclick='togglePassword()') &#x1F441;
        label(for='role') Role
        select#role(name='role' required='')
          option(value='') -- Select Role --
          option(value='Admin') Admin
          option(value='Manager') Manager
          option(value='Attendant') Attendant
        button(type='submit') Register
        p#error-message
  .settings-container
    .settings-section
      h2 Business Information
      form#businessForm(action='/' method='POST')
        input#companyName(type='text' name='companyName' placeholder='Company Name' required='')
        input#companyEmail(type='email' name='companyEmail' placeholder='Company Email' required='')
        input#companyPhone(type='tel' name='companyPhone' placeholder='Company Phone' required='')
        button(type='submit') Save
    .settings-section
      h2 Theme Settings
      form#themeForm(action='/' method='POST')
        select#theme(name='theme')
          option(value='light') Light Mode
          option(value='dark') Dark Mode
        button(type='submit') Apply Theme
