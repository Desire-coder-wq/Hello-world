doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1")
    title MWF â€” Stock Management
    link(rel="stylesheet", href="/css/stock.css")
  body
    nav.topnav
      ul
        li
          a(href="/dashboard") Dashboard
        li
          a(href="/sales") Sales Entry
        li
          a(href="/receipt") Receipt
        li
          a(href="/sales-report") Sales Report
        li
          a(href="/stock-report") Stock Report
        li
          a(href="/stock-list") Stock List
        li
          a(href="/logout", class="logout-btn") Logout

    header#topbar
    main.container
      h1 Stock Management

      form#stockForm.grid(action=stock ? `/stock/${stock._id}?_method=PUT` : "/stock", method="POST")
        if stock
          input(type="hidden", name="id", value=stock._id)

        label(for="name") Product Name
        select#name(name="productName", required)
          option(value='' disabled selected= !stock) -- Select Product --
          option(value='timber', selected=stock && stock.productName === 'timber') Timber
          option(value='poles', selected=stock && stock.productName === 'poles') Poles
          option(value='hard-wood', selected=stock && stock.productName === 'hard-wood') Hard-Wood
          option(value='soft-wood', selected=stock && stock.productName === 'soft-wood') Soft-Wood
          option(value='bed', selected=stock && stock.productName === 'bed') Bed
          option(value='sofa', selected=stock && stock.productName === 'sofa') Sofa
          option(value='dining table', selected=stock && stock.productName === 'dining table') Dining Table
          option(value='cupboards', selected=stock && stock.productName === 'cupboards') Cupboards
          option(value='drawers', selected=stock && stock.productName === 'drawers') Drawers

        label(for="type") Product Type
        select#type(name="productType", required)
          option(value='' disabled selected= !stock) -- Select Type --
          option(value='wood', selected=stock && stock.productType === 'wood') Wood
          option(value='furniture', selected=stock && stock.productType === 'furniture') Furniture

        label(for="category") Product Category
        select#category(name="category", required)
          option(value='' disabled selected= !stock) -- Select Category --
          option(value='raw material', selected=stock && stock.category === 'raw material') Raw Material
          option(value='finished goods', selected=stock && stock.category === 'finished goods') Finished Goods

        label(for="quantity") Quantity
        input#quantity(type="number", name="quantity", min="0", required, placeholder="Enter quantity", value=stock ? stock.quantity : '')

        label(for="price") Unit Price
        input#price(type="number", name="price", min="0", required, placeholder="Enter unit price", value=stock ? stock.price : '')

        label(for="supplier") Supplier Name
        input#supplier(type="text", name="supplier", required, placeholder="Enter supplier name", value=stock ? stock.supplier : '')

        label(for="quality") Quality
        input#quality(type="text", name="quality", placeholder="Enter quality", value=stock ? stock.quality : '')

        label(for="color") Color (Optional)
        input#color(type="text", name="color", placeholder="Enter color", value=stock ? stock.color : '')

        label(for="measurements") Measurements (Optional)
        input#measurements(type="text", name="measurements", placeholder="Enter measurements", value=stock ? stock.measurements : '')

        button(type="submit") Save Item

    //- script(src="/js/assets/js/auth.js")
    //- script(src="/js/ui.js")
    script.
      requireAuth();
      renderTopbar("Stock Management");
