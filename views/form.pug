doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  title Submit Form
  link(rel='stylesheet' href='css/form.css')
  nav.navbar.navbar-expand-lg.bg-body-tertiary
      .container-fluid
        a.navbar-brand(href='#') FORMS
        button.navbar-toggler(type='button' data-bs-toggle='collapse' data-bs-target='#navbarNav' aria-controls='navbarNav' aria-expanded='false' aria-label='Toggle navigation')
          span.navbar-toggler-icon
        #navbarNav.collapse.navbar-collapse
          ul.navbar-nav.ms-auto
            li.nav-item
              a.nav-link(href='/index') Home
            li.nav-item
              a.nav-link(href='/register') register
            li.nav-item
              a.nav-link(href='/login') login
            li.nav-item
              a.nav-link(href='/stock') stock

.container
  h1 Submit Your Info
  form(action='/submit' method='POST')
    .input-group
      label(for='name') Full Name
      input#name(type='text' name='name' placeholder='Enter your full name' required='')
    .input-group
      label(for='email') Email Address
      input#email(type='email' name='email' placeholder='Enter your email' required='')
    .input-group
      label(for='message') Message
      textarea#message(name='message' placeholder='Write your message here...' rows='5' required='')
    script(src='server.js')
    script.
    button(type='submit') Send
