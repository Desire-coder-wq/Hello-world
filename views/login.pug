doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  title Furniture Company-Login
  link(rel='stylesheet' href='/css/register.css')
  nav.navbar.navbar-expand-lg.bg-body-tertiary
      .container-fluid
        a.navbar-brand(href='#') FORMS
        button.navbar-toggler(type='button' data-bs-toggle='collapse' data-bs-target='#navbarNav' aria-controls='navbarNav' aria-expanded='false' aria-label='Toggle navigation')
          span.navbar-toggler-icon
        #navbarNav.collapse.navbar-collapse
          ul.navbar-nav.ms-auto
            li.nav-item
              a.nav-link(href='/index') Home
            li.nav-item
              a.nav-link(href='/register') register
            li.nav-item
              a.nav-link(href='/login') login
            li.nav-item
              a.nav-link(href='/stock') stock
.container
  .image-section
    img(src='/images/background.jpeg' alt='Furniture Company')
  .form-section
    h2 Login
    form#registerForm(action='/login' method='POST')
      label(for='email') Email
      input#email(type='email' name='email' placeholder='Enter email' required='')
      label(for='password') Password
      .password-wrapper
        input#password(type='password' name='password' placeholder='Enter password' required='')
        span.toggle-password(onclick='togglePassword()') &#x1F441;
      
      button(type='submit') login
      p#error-message
script(src='resgister.js')
