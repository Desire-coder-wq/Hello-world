doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1')
  title MWF &mdash; Stock Management
  link(rel='stylesheet' href='/css/stock.css')
header#topbar
main.container
  h1 Stock Management
  // Add / Edit Form
  form#stockForm.grid
    input#stockId(type='hidden' name='id')
    label
      | Product Name
      input#name(name='name' required='')
    label
      | Quantity
      input#quantity(type='number' name='quantity' min='0' required='')
    label
      | Unit Price
      input#price(type='number' name='price' min='0' required='')
    button(type='submit') Save Item
  // Table
  table#stockTable.table
script(src='js/assets/js/auth.js')
script(src='js/ui.js')
script(src='js/stock.js')
script.
  requireAuth();
  renderTopbar('Stock Management');
  renderStock();
